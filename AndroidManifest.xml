<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pedidorestaurante"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        
        <activity
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:name="com.pedido.restaurante.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:name="com.pedido.restaurante.ActivityMesa"></activity>
        
        <activity 
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:name="com.pedido.restaurante.ActivityCatalogoSimples"></activity>
        
        <activity 
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:noHistory="true"
            android:name="com.pedido.restaurante.ActivityDetalhe"></activity>
        
         <activity 
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:noHistory="true"
            android:name="com.pedido.restaurante.ActivityFinalizarPedido"></activity>
        
    </application>

</manifest>
