<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityCatalogoSimples" >

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_categoria_simples"
        android:textColor="#000000"
        android:textSize="20sp" />
    
    <Spinner
        android:id="@+id/sCatagoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvCategoria"
        android:layout_marginTop="39dp" />
    
    <ListView
        android:id="@+id/lvProduto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bFinalizar"
        android:layout_alignLeft="@+id/sCatagoria"
        android:layout_below="@+id/sCatagoria"
        android:divider="@null" >

    </ListView>

    <Button
        android:id="@+id/bFinalizar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/catelogo_simples_finalizar"
        android:textSize="20sp" />

</RelativeLayout>
